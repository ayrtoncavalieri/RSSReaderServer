{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-DDEBUG",
                "-I ${fileDirname}/",
                "-I ${fileDirname}/opsImplementation",
                "${fileDirname}/opsImplementation/*.cpp",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/RSSReaderServer.out",
                "-lPocoFoundation",
                "-lPocoNet",
                "-lPocoUtil",
                "-lPocoNetSSL",
                "-lPocoCrypto",
                "-lPocoData",
                "-lPocoDataMySQL",
                "-lPocoJSON",
                "-lPocoJWT"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}