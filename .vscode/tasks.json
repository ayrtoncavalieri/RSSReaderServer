{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-O2",
                "-g",
                "${fileDirname}/*.cpp",
                "${fileDirname}/*.hpp",
                "-o",
                "${fileDirname}/main",
                "-lPocoFoundation",
                "-lPocoNet",
                "-lPocoUtil",
                "-lPocoNetSSL",
                "-lcryptopp"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}